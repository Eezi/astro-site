<style>
  p {
    font-size: 1.3rem;
    line-height: 1.5rem;
  }
  .content h2 span {
    background: -webkit-linear-gradient(
      0deg,
      var(--secondary-color) 0%,
      var(--main-color) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .content p {
    margin-top: 1rem;
  }

  .bio_container span {
    font-weight: bold;
    margin-right: 8px;
  }

  .bio_container b {
    margin-right: 8px;
  }

  .bio_container span::before {
    content: "";
    background: #fff;
    width: 5px;
    height: 50px;
    display: block;
    margin-left: 24px;
    border-radius: 5px;
  }
</style>
