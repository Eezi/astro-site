---
import pathfinder from "../assets/pathfinderGif.gif";
import eCommerce from "../assets/techshop.png";
import passionLogo from "../assets/passion-logo.png";
import MainLayout from "../layouts/MainLayout.astro";

export const projectsContent = [
  {
    title: "Path Visualizer",
    description: `
      This path visualizer app was made using Vue.js and the Dijkstraâ€™s algorithm. The users can draw their own walls or generate random walls and then scan the grid so the algorithm can find the shortest path.
    `,
    imgPath: pathfinder,
    url: "https://polun-kulkija.netlify.app",
  },
  {
    title: "Passion Seeker",
    description: `
    This app is made for the people who want to find a new passion or hobbie quickly and easily.
    `,
    imgPath: passionLogo,
    url: "https://passion-finder.herokuapp.com/",
  },
];
---

<MainLayout frontmatter={{ title: "Blog" }}>
  <div class="mb-20 bg-light dark:bg-mainBg">
    <h3 class="text-center mb-5 md:text-3xl text-2xl">Most recent projects</h3>
    <div class="flex justify-center flex-col md:flex-row md:flex-wrap">
      {
        projectsContent.map(({ imgPath, description, url, title }) => (
          <div
            style={{ position: "relative" }}
            class="rounded-lg max-w-xs h-max mb-5 mx-4 backdrop-blur-sm bg-white/10"
          >
            <img
              src={imgPath}
              alt=""
              class="w-full z-0 h-48 transition duration-300 rounded-t-lg sm:h-56 opacity-80 hover:opacity-100"
            />

            <div class="px-4 pt-4 pb-9 mb-6 text-center">
              <div class="mb-2 text-2xl font-bold uppercase">{title}</div>
              <span class="text-sm">{description}</span>
            </div>
            <a
              target="_blank"
              style={{ position: "absolute", bottom: 0, width: "100%" }}
              href={url}
              class="w-100 block py-3 mt-3 text-center text-lg font-extrabold transition duration-300"
            >
              VIEW PROJECT
            </a>
          </div>
        ))
      }
    </div>
  </div>
</MainLayout>
